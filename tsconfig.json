{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib",
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["es2017", "es7", "es6", "DOM"],
        "declarationMap": true,
        "sourceMap": true,
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@models/*": ["./src/models/*"],
            "@worker/*": ["./src/worker/*"],
            "@parallel/*": ["./src/parallel/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.mock.ts"]
}
