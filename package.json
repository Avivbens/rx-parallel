{
    "name": "rx-parallel",
    "version": "1.0.0",
    "description": "Package for multi-tasking and parallel processing",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "distribute": "npm run build && npm publish",
        "build": "rm -rf ./lib && tsc",
        "test": "jest",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "prepare": "husky install || exit 0 && npm run build ",
        "prepublish": "npm run build",
        "pre-commit": "pretty-quick --staged"
    },
    "homepage": "https://github.com/Avivbens/rx-parallel",
    "publisher": "Aviv Ben Shahar",
    "maintainers": [
        {
            "name": "Aviv Ben Shahar",
            "email": "avivbens87@gmail.com"
        }
    ],
    "keywords": [
        "rxjs",
        "promise",
        "parallel",
        "multi-task"
    ],
    "author": "Aviv Ben Shahar",
    "license": "MIT",
    "dependencies": {
        "rxjs": "^7.5.5"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3",
        "prettier": "^2.3.2",
        "pretty-quick": "^3.1.3",
        "source-map-support": "^0.5.20"
    },
    "files": [
        "lib/**/*"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "clearMocks": true,
        "testTimeout": 10000
    }
}
